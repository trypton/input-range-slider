{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "@open-wc/eslint-config",
    "eslint-config-prettier"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error"
    ],
    "import/no-unresolved": "off",
    "import/extensions": [
      "error",
      "always",
      {
        "ts": "never",
        "js": "ignorePackages"
      }
    ],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"]
  }
}
